{
  "name": "@hexr/hookit",
  "version": "0.1.1",
  "description": "Application hooks made simple",
  "main": "index.js",
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "xo",
    "test": "yarn run lint && yarn run test:unit",
    "test:unit": "nyc --reporter=html --reporter=text mocha --recursive test/unit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hexrweb/hookit.git"
  },
  "keywords": [
    "hook",
    "hooks",
    "hook-manager"
  ],
  "author": "HexR <hello@hexr.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hexrweb/hookit/issues"
  },
  "homepage": "https://github.com/hexrweb/hookit#readme",
  "dependencies": {
    "bluebird": "^3.5.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "sinon": "^6.3.4",
    "xo": "^0.23.0"
  },
  "xo": {
    "rules": {
      "no-use-extend-native/no-use-extend-native": "off"
    },
    "overrides": [
      {
        "files": "test/**/*.js",
        "envs": [
          "node",
          "mocha"
        ],
        "rules": {
          "func-names": "off",
          "prefer-arrow-callback": "off",
          "no-unused-expressions": "off"
        }
      }
    ]
  }
}
